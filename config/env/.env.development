# ========================================
# ITSM-Sec Nexus - 開発環境設定
# ========================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0

# System IP Address
SYSTEM_IP=192.168.0.187

# HTTPS Configuration - 開発環境もHTTPSを使用（HSTSキャッシュ問題を回避）
ENABLE_HTTPS=true
HTTPS_PORT=5443
SSL_CERT_PATH=./ssl/server.crt
SSL_KEY_PATH=./ssl/server.key
HTTP_REDIRECT_TO_HTTPS=false

# JWT Configuration
JWT_SECRET=itsm-nexus-development-secret-key-2026
JWT_EXPIRES_IN=24h

# CORS Configuration - 開発環境では緩い設定
CORS_ORIGIN=https://localhost:5443,https://192.168.0.187:5443,https://127.0.0.1:5443

# Database
DATABASE_PATH=./backend/itsm_nexus.db

# Logging - 開発環境では詳細ログ
LOG_LEVEL=debug

# SMTP Configuration (開発環境ではダミー)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=dev@example.com
SMTP_PASSWORD=dev-password
SMTP_FROM=ITSM-Sec Nexus Dev <noreply-dev@itsm.local>

# Email Notifications - 開発環境では無効
ENABLE_EMAIL_NOTIFICATIONS=false
ADMIN_EMAIL=dev-admin@example.com
SECURITY_TEAM_EMAIL=dev-security@example.com

# SLA Alert Configuration
SLA_ALERT_EMAIL=dev-admin@example.com
SLA_ALERT_THRESHOLD=90

# Microsoft 365 Graph API Configuration (開発環境ではダミー)
M365_TENANT_ID=dev-tenant-id
M365_CLIENT_ID=dev-client-id
M365_CLIENT_SECRET=dev-client-secret
M365_GRAPH_ENDPOINT=https://graph.microsoft.com/v1.0

# Development Mode - サンプルデータを有効化
DISABLE_SEED_DATA=false

# Rate Limiting - 開発環境では緩い制限
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
