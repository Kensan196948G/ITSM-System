{
  "mcpServers": {
    "brave-search": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "YOUR_BRAVE_API_KEY_HERE"
      }
    },
    "context7": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "env": {
        "CONTEXT7_API_KEY": "YOUR_CONTEXT7_API_KEY_HERE"
      }
    },
    "memory": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory",
        "--memory-path",
        "${USERPROFILE}\\.claude-memory"
      ]
    },
    "sqlite": {
      "command": "python",
      "args": [
        "-m",
        "uv",
        "tool",
        "run",
        "mcp-server-sqlite",
        "--db-path",
        "${USERPROFILE}\\.databases\\itsm-system.db"
      ]
    }
  }
}
