{
  "mcpServers": {
    "brave-search": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "***REDACTED_BRAVE_KEY***"
      }
    },
    "context7": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "env": {
        "CONTEXT7_API_KEY": "***REDACTED_CONTEXT7_KEY***"
      }
    },
    "memory": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory",
        "--memory-path",
        "${USERPROFILE}\\.claude-memory"
      ]
    },
    "sqlite": {
      "command": "python",
      "args": [
        "-m",
        "uv",
        "tool",
        "run",
        "mcp-server-sqlite",
        "--db-path",
        "${USERPROFILE}\\.databases\\itsm-system.db"
      ]
    }
  }
}
