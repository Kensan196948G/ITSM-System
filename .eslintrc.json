{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "no-console": "off",
    "camelcase": "off",
    "no-shadow": "warn",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_|^next$|^unit$|^employee_number$" }],
    "consistent-return": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "comma-dangle": ["error", "never"],
    "func-names": "off",
    "prefer-arrow-callback": "off",
    "no-param-reassign": ["error", { "props": false }],
    "max-len": ["warn", { "code": 120, "ignoreStrings": true, "ignoreTemplateLiterals": true }]
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "*.bak",
    "WebUI-Sample/",
    "backend/migrations/"
  ]
}
