# ITSM-Sec Nexus - Production Environment Configuration
# ========================================================
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control!

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0
DOMAIN=your-domain.com

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# JWT Authentication
# IMPORTANT: Generate a strong secret using: openssl rand -base64 64
JWT_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_EXPIRES_IN=24h

# Database
# Path inside container (do not change unless you know what you're doing)
DATABASE_PATH=/app/backend/itsm_nexus.db

# Logging
LOG_LEVEL=warn

# Redis Configuration
# IMPORTANT: Generate a strong password using: openssl rand -base64 32
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Grafana Configuration
# IMPORTANT: Generate a strong password
GRAFANA_ADMIN_PASSWORD=GENERATE_STRONG_PASSWORD

# System Information (auto-detected by setup script)
SYSTEM_IP=192.168.0.187

# Email Configuration (optional, for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Backup Configuration (optional)
# BACKUP_S3_BUCKET=itsm-backups
# BACKUP_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
