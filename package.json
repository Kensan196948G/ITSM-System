{
  "name": "itsm-system",
  "version": "1.0.0",
  "description": "ISO 20000 (ITSM) と NIST CSF 2.0 (Security) を高度に統合した、プロフェッショナルなITサービスマネジメントシステムです。",
  "main": "app.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"API,WEB\" --prefix-colors \"cyan,magenta\"",
    "dev:backend": "cross-env NODE_ENV=development node backend/server.js",
    "dev:frontend": "npx http-server . -p 8080 -a 0.0.0.0 --cors",
    "test": "jest",
    "test:ci": "npm run migrate:latest && npm run lint && npm run format:check && npm test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "lint": "eslint backend/**/*.js && eslint app.js --config .eslintrc.browser.json",
    "lint:fix": "eslint backend/**/*.js --fix && eslint app.js --config .eslintrc.browser.json --fix",
    "format": "prettier --write \"backend/**/*.js\" \"app.js\" \"*.js\"",
    "format:check": "prettier --check \"backend/**/*.js\" \"app.js\" \"*.js\"",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:status": "knex migrate:status",
    "migrate:make": "knex migrate:make",
    "backup": "./scripts/backup.sh",
    "restore": "./scripts/restore.sh",
    "prepare": "husky install"
  },
  "lint-staged": {
    "backend/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "app.js": [
      "prettier --write",
      "eslint --config .eslintrc.browser.json --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4"
  }
}
